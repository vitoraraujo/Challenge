<p id="notice"><%= notice %></p>

<h1>Challenges</h1>

<%= link_to 'New Challenge', new_challenge_path %>

<table align="center">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @challenges.each do |challenge| %>
      <tr>
        <td><%= challenge.content %></td>
        <td><%= challenge.user.name %></td>
        <td><%= link_to 'Show', challenge %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

