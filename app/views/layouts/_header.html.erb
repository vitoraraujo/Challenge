				<%= link_to current_user do %>
					<%= image_tag "usuario.png", class: "col-xs-2 header-img-buttom" %>
				<% end %>
			<% if false %>
			<form class="col-xs-6">
			<div class="form-group col-xs-8">
          		<input type="text" class="form-control col-xs-12" placeholder="Search">
        	</div>
        	<button type="submit" class="btn btn-default col-xs-4">Submit</button>
      		</form>
      		<% end %>
			<%= link_to feed_path do %>
				<%= image_tag "terra.png", style: "float: right", class: "col-xs-2 header-img-buttom" %>
			<% end %>
