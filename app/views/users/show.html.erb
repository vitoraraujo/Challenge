<p id="notice"><%= notice %></p>

<% provide(:title, @user.name) %>

<div style="text-align: center">
  <%= gravatar_for @user %>
<h1>
  <%= @user.name %>
</h1>
</div>
<br>
<div>
<% if logged_in? %>
  <% unless current_user?(@user) %>
    <% if current_user.following?(@user) %>
      <%= form_for(current_user.active_relationships.find_by(followed_id: @user.id),
                   html: { method: :delete }) do |f| %>
        <%= f.submit "Unfollow", class: "btn" %>
      <% end %>
    <% else %>
      <%= form_for(current_user.active_relationships.build) do |f| %>
        <div><%= hidden_field_tag :followed_id, @user.id %></div>
        <%= f.submit "Follow", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  <% else %>
      <%= link_to "Settings" %>
  <% end %>
<% end %>

<br>
<p> 
  <h3>Challenges:</h3>
</p>
<p>
  <strong>Done:</strong>
    0
</p>
<p>
  <strong>Writen:</strong>
  
  <%= link_to @user.challenges.count  %>
</p>

<p>
<h3> Social: </h3>
</p>
<p>
  <strong> Followers: </strong>
    <%= link_to @user.followers.count, followers_user_path(@user) %>
</p>

<p>
  <strong> Following: </strong>
  <%= link_to @user.following.count, following_user_path(@user) %>
</p>

 <div class="col-md-8">
    <% if @user.challenges.any? %>
      <h3>Challenges (<%= @user.challenges.count %>)</h3>
        <%= render @challenges %>
    <% end %>
  </div>



  <% if logged_in? %>
  	<% if current_user.admin? || current_user?(@user) %>
  	  <td><%= link_to 'Edit', edit_user_path(@user) %></td>
  		<td><%= button_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
  	<% end %>
  <% end %>
  <%= link_to 'Back', users_path %>
</div>